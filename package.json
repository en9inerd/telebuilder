{
  "name": "telebuilder",
  "version": "0.1.7",
  "description": "Simple telegram bot framework based on gramjs",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "prebuild": "tsc --build --clean && rm -rf dist",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "postbuild": "cp -r package.json dist",
    "test": "jest",
    "postversion": "cp -r package.json ..",
    "prepublishOnly": "npm pkg delete scripts",
    "remscripts": "cd dist && npm pkg delete scripts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/en9inerd/telebuilder.git"
  },
  "keywords": [
    "telegram-api",
    "telegram",
    "bot"
  ],
  "author": "Vladimir Loskutov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/en9inerd/telebuilder/issues"
  },
  "homepage": "https://github.com/en9inerd/telebuilder#readme",
  "dependencies": {
    "big-integer": "^1.6.51",
    "config": "^3.3.9",
    "glob": "^10.2.6",
    "json5": "^2.2.3",
    "mongodb": "^5.6.0",
    "node-localstorage": "^2.2.1",
    "store2": "^2.14.2",
    "telegram": "^2.17.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.0",
    "@types/config": "^3.3.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/node-localstorage": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "semantic-release": "^21.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  }
}
